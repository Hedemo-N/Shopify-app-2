{
  "compilerOptions": {
    /* ======= Basinställningar ======= */
    "target": "ES2022",
    "module": "NodeNext",                 // ✅ måste matcha moduleResolution
    "moduleResolution": "NodeNext",       // för ESM
    "noEmit": true,                       // vi låter Vercel kompilera, krävs för allowImportingTsExtensions
    "allowImportingTsExtensions": true,   // tillåt .js-importer
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* ======= För React/JSX (valfritt) ======= */
    "jsx": "react-jsx"
  },

  /* ======= Vilka mappar TS ska läsa ======= */
  "include": ["api", "routes", "utils", "src"],
  "exclude": ["node_modules"]
}
